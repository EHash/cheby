peripheral {
   name = "register test 1";
   description = "A simple register";
   prefix = "reg1";

   reg {
     name = "Register 1";
     description = "Register 1 has two fields";
     prefix = "R1";

      field {
         name = "Reset bit";
         description = "1 to reset";
         prefix = "reset";
         type = BIT;
         access_bus = READ_WRITE;
         access_dev = READ_ONLY;
      };

      field {
         name = "Enable";
         description = "1 to enable device";
         prefix = "enable";
         type = BIT;
         access_bus = READ_WRITE;
         access_dev = READ_ONLY;
      };
   };
};
