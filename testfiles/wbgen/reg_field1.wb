peripheral {
   name = "register test 1";
   description = "A simple register";
   prefix = "reg1";

   reg {
     name = "Register 1";
     description = "Register 1 has two fields";
     prefix = "R1";

      field {
         name = "Reset bit";
         description = "1 to reset";
         prefix = "reset";
         type = BIT;
         access_bus = READ_WRITE;
         access_dev = READ_ONLY;
      };

      field {
         name = "Mode";
         description = "Set device mode";
         prefix = "mode";
         size = 3;
         type = SLV;
         access_bus = READ_WRITE;
         access_dev = READ_ONLY;
      };
   };
};
